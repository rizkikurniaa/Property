<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/iv_property"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@color/background"/>

        <View
            android:id="@+id/view_property_name"
            android:layout_width="100dp"
            android:layout_height="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_property" />

        <View
            android:id="@+id/view_installment"
            android:layout_width="150dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/background"
            app:layout_constraintStart_toStartOf="@+id/view_property_name"
            app:layout_constraintTop_toBottomOf="@+id/view_property_name" />

        <View
            android:id="@+id/view_address"
            android:layout_width="125dp"
            android:layout_height="8dp"
            android:layout_marginTop="5dp"
            android:background="@color/background"
            app:layout_constraintStart_toStartOf="@+id/view_installment"
            app:layout_constraintTop_toBottomOf="@+id/view_installment" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/iv_property2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@color/background"/>

            <View
                android:id="@+id/view_property_name2"
                android:layout_width="100dp"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_property2" />

            <View
                android:id="@+id/view_installment2"
                android:layout_width="150dp"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/background"
                app:layout_constraintStart_toStartOf="@+id/view_property_name2"
                app:layout_constraintTop_toBottomOf="@+id/view_property_name2" />

            <View
                android:id="@+id/view_address2"
                android:layout_width="125dp"
                android:layout_height="8dp"
                android:layout_marginTop="5dp"
                android:background="@color/background"
                app:layout_constraintStart_toStartOf="@+id/view_installment2"
                app:layout_constraintTop_toBottomOf="@+id/view_installment2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>